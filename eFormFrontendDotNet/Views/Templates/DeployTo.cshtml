@{
    Layout = null;
}

<div class="container-fluid">
    <form accept-charset="utf-8" action="/Templates/Deploy/@(ViewBag.check_list.id)" class="deploy_check_lists" id="deploy_check_lists" method="post" data-remote="true" data-type="json">
        <table border="0" cellpadding="0" cellspacing="0" class="table table-striped table-bordered table-condensed table-hover dataTable no-footer" id="templates" role="grid" aria-describedby="check_lists_info" style="width: 100%;">
            <thead>
                <tr role="row">
                    <th class="col-md-1 text-center" rowspan="1" colspan="1">
                        Microting ID
                    </th>
                    <th class="col-md-2 text-center" rowspan="1" colspan="1">
                        Name
                    </th>
                    <th class="col-md-2 text-center" rowspan="1" colspan="1">
                        Select
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (eFormFrontendDotNet.Models.sites site in ViewBag.sites)
            {
                bool matchFound = false;
                    <tr>
                        <td>
                            @site.microting_uid
                        </td>
                        <td>
                            @site.name
                    </td>
                    <td>
                        @foreach (eFormFrontendDotNet.Models.check_list_sites cls in ViewBag.check_list_sites)
                        {
                            if (cls.site_id == site.id)
                            {
                                matchFound = true;
                            }
                        }
                        @if (matchFound)
                        {
                            <div>
                                <input type="checkbox" checked name="site_id_@(site.id)" value="@(site.id)" />
                            </div>
                        }
                        else
                        {
                            <div>
                                <input type="checkbox" name="site_id_@(site.id)" value="@(site.id)" />
                            </div>
                        }

                    </td>
                </tr>
                }
            </tbody>
        </table>
    </form>
</div>