<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Microting eFormFrontendDotNet</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        <script type="text/javascript">
            const sMtLogLevel = "info";
        </script>
    }
    else
    {
        <script type="text/javascript">
            const sMtLogLevel = "info";
        </script>
    }
</head>
<body>
    <div class="boxed">
        <header class="hidden-xs header-full" id="header_full_top">
            <div class="container-fluid">
                <a href="/">
                    <div class="header-full-title animated fadeInRight">
                        <h1 class="animated fadeInRight">
                            Microting eFormFrontendDotNet
                        </h1>
                    </div>
                </a>
                <nav class="top-nav"></nav>
            </div>
        </header>
        <nav class="navbar navbar-static-top navbar-default navbar-header-full navbar-dark" id="header" role="navigation">
            <div class="container-fluid">
                <div class="pull-right">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);">Full user name</a><ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="/users/edit">Change password</a>
                                </li>
                                <li>
                                    <a data-no-turbolink="true" href="/sign_out">Sign out</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="navbar-header">
                    <button aria-expanded="true" class="navbar-toggle" data-target="#bs-example-navbar-collapse-1" data-toggle="collapse" style="position: absolute; top: -1px;" type="button">
                        <span class="sr-only">Toggle navigation</span>
                        <i class="fa fa-bars"></i>
                    </button>
                    <a class="navbar-brand hidden-lg hidden-md hidden-sm" href="/" id="ar-brand" style="">

                    </a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="">
                            <a href="/">
                                eForms
                            </a>
                        </li>
                        <li class="">
                            <a href="/SimpleSites">
                                "Workers"
                            </a>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);">Advanced</a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li class="">
                                    <a href="/Sites">
                                        Sites
                                    </a>
                                </li>
                                <li class="">
                                    <a href="/Workers">
                                        Workers
                                    </a>
                                </li>
                                <li class="">
                                    <a href="/Units">
                                        Units
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        @RenderBody()        
    </div>
    <div id="footer_placeholder" style="height: 148px; background-color: white"></div>
    <div id="my_footer_id_2" style="z-index: 999">
        <aside id="footer-widgets">
            <br>
            <div class="container text-center">
                <a href="https://www.microting.com/terms-of-service" target="_blank">Terms of Service</a>
                |
                <a href="https://www.microting.com/privacy-policy" target="_blank">Privacy Policy</a>
                <b></b>
            </div>
        </aside>
        <footer id="footer">
            <p>
                ©
                Microting A/S 2007 - @DateTime.Now.Year
            </p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
